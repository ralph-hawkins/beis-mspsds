.govuk-grid-column-one-half
  table.govuk-table.summary-table
    tbody.govuk-table__body
      h2.govuk-heading-l[class="govuk-!-margin-bottom-6"]
        | Current status
      tr.govuk-table__row
        th.govuk-table__header[scope="row"]
          span.govuk-caption-m[class="govuk-!-font-size-16"]
            | Status
          = investigation.status
        td.govuk-table__cell [class="govuk-!-font-size-16"]
          = link_to "Change", status_investigation_path(investigation)

      tr.govuk-table__row
        th.govuk-table__header[scope="row"]
          span.govuk-caption-m[class="govuk-!-font-size-16"]
            | Assigned to
          - assignee = investigation.assignee
          - if assignee
            - if assignee.is_a? Team
              = assignee.name
            - if assignee.is_a? User
              = assignee.full_name.to_s
              - if assignee&.organisation.present?
                div[class="govuk-!-font-size-16"]
                  = assignee.organisation.name
          - else
            = "Unassigned"
          td.govuk-table__cell [class="govuk-!-font-size-16"]
            - if policy(investigation).assign?
              = link_to "Change", assign_investigation_path(investigation)
      tr.govuk-table__row
        th.govuk-table__header[scope="row"]
          span.govuk-caption-m[class="govuk-!-font-size-16"]
            | Last updated
          span = "#{time_ago_in_words(investigation.updated_at)} ago"
        td.govuk-table__cell [class="govuk-!-font-size-16"]
          = link_to "Add activity", new_investigation_activity_path(@investigation)
